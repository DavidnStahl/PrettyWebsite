@model PrettyWebsite.Models.ViewModels.Blocks.ImageCarouselBlockViewModel


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">

        <div class="carousel-item active mt-5">
            <img class="mx-auto d-block w-100" style="max-width: 800px" src="@Url.ContentUrl(Model.CurrentBlock.Images[0])" alt="image" )>
        </div>
        @foreach (var item in Model.CurrentBlock.Images)
        {
            if (item != Model.CurrentBlock.Images[0])
            {
                <div class="carousel-item mt-5">
                    <img class="mx-auto d-block w-100" style="max-width: 800px" src="@Url.ContentUrl(item)" alt="image" )>
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

