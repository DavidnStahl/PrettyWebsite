@using EPiServer.Framework.Localization
@using EPiServer.ServiceLocation

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

@{
    var localizationService = ServiceLocator.Current.GetInstance<LocalizationService>();
}
<div class="container">
    <div class="row align-self-center">

        <div class="col-auto">
            <div class="row">
                <div class="col-auto">

                    <select class="form-select btn-danger text-white mt-3 ml-4 mr-4" id="select" style="height:52px;font-size:medium;" aria-label="Default select example">
                        <option value="1">@localizationService.GetString("/SearchFormBlock/Text1")</option>
                        <option value="2">@localizationService.GetString("/SearchFormBlock/Text2")</option>
                    </select>
                </div>
                <div class="col-auto">
                    <input autofocus type="text" class="form-control mt-3 ml-3" id="searchText" style="height:52px;width:150px;" 
                           placeholder="@localizationService.GetString("/SearchFormBlock/Placeholder")">
                </div>
                <div class="col-auto">
                    <button id="btn" class="btn btn-primary mb-3 mt-3" style="padding-right:20px;padding-left:20px;"><i class="fa fa-search" style="color:white;"></i></button>
                </div>
            </div>
        </div>
    </div>



    <div id="partialResult"></div>
</div>
    

<script>
    $('#select').change(function () {
        $('#searchText').focus()
    });
    $("#btn").click(function () {

        var type = $("#select").val();
        var query = $("#searchText").val();
        $.get("/SearchResult/Submit?type=" + type + "&query=" + query,            
            function (data, status) {
                $("#partialResult").empty().append(data);
                //alert("Data: " + data + "\nStatus: " + status);
            });
    });
</script>





