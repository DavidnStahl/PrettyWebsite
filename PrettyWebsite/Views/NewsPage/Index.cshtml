@model PrettyWebsite.Models.ViewModels.NewsPageViewModel


<div class="card mb-4 mt-4 ml-1 mr-1">
    <div class="card mt-5 ml-5 mr-5">
        @if (Model.CurrentPage.Image.PageImage != null)
        {
            <div @Html.EditAttributes(x => x.CurrentPage.Image)>
                <img class="mx-auto d-block w-100 lazyloaded" style="max-width: 800px"  data-src="@Url.ContentUrl(Model.CurrentPage.Image.PageImage)" alt="@Html.PropertyFor(x => x.CurrentPage.Image.AltText)" />
            </div>
        }

        <div class="card-header">
            <h2>@Html.PropertyFor(x => x.CurrentPage.Headline)</h2>
        </div>
        <div class="card-body">
            @Html.PropertyFor(x => x.CurrentPage.Text)
        </div>
    </div>
</div>