@model PrettyWebsite.Models.ViewModels.NewsPageViewModel

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="~/Static/js/ReviewStar.js"></script>
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

<!-- Main CSS-->
<link href="~/Static/css/form.css" rel="stylesheet" media="all">
<!-- Main JS-->
<!-- Jquery JS-->
<!-- Main JS-->
<script src="~/Static/js/global.js"></script>

<div class="card mb-4 mt-4">

    <div class="card mt-5 ml-5 mr-5">
        @if (Model.CurrentPage.Image.PageImage != null)
        {
            <div @Html.EditAttributes(x => x.CurrentPage.Image)>
                <img class="img-fluid" src="@Url.ContentUrl(Model.CurrentPage.Image.PageImage)" alt="@Html.PropertyFor(x => x.CurrentPage.Image.AltText)" />
            </div>
        }

        <div class="card-header">
            <h2>@Html.PropertyFor(x => x.CurrentPage.Headline)</h2>
        </div>
        <div class="card-body">
            @Html.PropertyFor(x => x.CurrentPage.Text)
        </div>
    </div>
    


</div>





