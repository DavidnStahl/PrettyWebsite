@model PrettyWebsite.Models.ViewModels.Pages.MoviePageViewModel
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="~/Static/js/ReviewStar.js"></script>
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

<!-- Main CSS-->
<link href="~/Static/css/form.css" rel="stylesheet" media="all">
<!-- Main JS-->
<!-- Jquery JS-->
<!-- Main JS-->
<script src="~/Static/js/global.js"></script>

<div class="card mb-4 mt-4">

    @Html.PropertyFor(m => m.CurrentPage.MovieDetailsContentArea, new { movie = Model.Movie, ratings = Model.Ratings })

    @if (Model.movieList.FirstOrDefault(x => x.Contains(Model.Movie.imdbID)) == null)
    {
        @Html.PropertyFor(m => m.CurrentPage.ReviewFormContentArea, new { Id = Model.Movie.imdbID })
    }


    @if (Model.ReviewList.Count > 0)
    {
        @Html.PropertyFor(m => m.CurrentPage.MovieReviewContentArea)
    }
</div>


