
@model PrettyWebsite.Models.ViewModels.NavigationViewModel



<nav class="navbar navbar-expand-lg navbar-light bg-dark mb-0">
    <a class="navbar-brand text-warning" href="@Url.ContentUrl(Model.Menu.ToList()[0].ContentLink)">Pretty Website</a>
    <button class="navbar-toggler bg-warning" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon bg-warning"></span>
    </button>

    <div class="collapse navbar-collapse bg-dark" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            @foreach (var menuItem in Model.Menu)
            {

                <li class="nav-item ml-3">
                    <a class="nav-link text-warning" href="@Url.ContentUrl(menuItem.ContentLink)">@menuItem.Name <span class="sr-only">(current)</span></a>
                </li>
            }
            <li class="nav-item ml-3">
                <a class="nav-link text-warning" href="#">Link</a>
            </li>
            <li class="nav-item ml-3">
                <a class="nav-link disabled text-warning" href="#">Disabled</a>
            </li>
            <li class="nav-item ml-3">
                @Html.PropertyFor(m => m.SearchFormBlock)
            </li>

         </ul>   

    </div>
</nav>



