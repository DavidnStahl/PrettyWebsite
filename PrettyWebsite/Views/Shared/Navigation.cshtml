@using PrettyWebsite.Models.ViewModels

@model PrettyWebsite.Models.ViewModels.Pages.StartPageViewModel

<nav class="navbar navbar-expand-lg navbar-light bg-ui mt-2 container-fluid">
    <div class="container">
        <a class="navbar-brand text-light font-weight-bold" style="padding-left:10px" href="@Url.ContentUrl(Model.Layout.Menu.ToList()[0].ContentLink)">Pretty Website</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto topnav ">
                @foreach (var menuItem in Model.Layout.Menu)
                {

                    <li class="nav-item">
                        <a style="padding-left:10px" class="nav-link" href="@Url.ContentUrl(menuItem.ContentLink)">@menuItem.Name</a>
                    </li>
                }                
            </ul>
        </div>
    </div>
</nav>


