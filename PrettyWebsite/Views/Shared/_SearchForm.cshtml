@using EPiServer.Framework.Localization
@using EPiServer.ServiceLocation

@{
    var localizationService = ServiceLocator.Current.GetInstance<LocalizationService>();
}
<div class="container g-3">
    <div class="row">
        @using (Html.BeginForm("Submit", "SearchResult", FormMethod.Post, new {id = "SearchForm", autocomplete="off"}))
        {
            <div class="row g-2">
                <div class="input-group border-black border-2">
                    <select class="form-select bg-danger text-white border-0" style="height: 100%;max-width: 20%" id="select" aria-label="Default select example">
                        <option class="bg-white text-dark" value="1">@localizationService.GetString("/SearchForm/Text1")</option>
                        <option class="bg-white text-dark" value="2">@localizationService.GetString("/SearchForm/Text2")</option>
                    </select>
                    <label class="form-label" for="searchText">
                        <span class="sr-only">Search text here</span>
                    </label>
                    <input autofocus type="text" class="form-control rounded-right" id="searchText" list="searchTextOptions" autocomplete="off"
                           placeholder="@localizationService.GetString("/SearchForm/Placeholder")">
                    <datalist id="searchTextOptions"></datalist>
                </div>
            </div>
        }
    </div>
</div>