@model PrettyWebsite.Models.ViewModels.Blocks.MovieReviewResultViewModel

@{
    var stars = 0;
}

@if (Model.ReviewDataList.Count > 0)
{

                 
    foreach (var review in Model.ReviewDataList)
    {
        stars = 0;
        <div class="list-group">
            <div class="list-group-item">

                <div class="col-md-11 text">
                    <div class="col-md-4"><h4 class="list-group-item-heading text-center">@review.Name</h4></div>
                    <div class="col-md-4"><h4 class="list-group-item-heading text-center"> @review.PublicationDate</h4></div>
                    <div class="col-md-4"><h4 class="list-group-item-heading text-xs-center"> @review.ReviewRating.ToString() <small> votes </small></h4></div>
                    <div class="list-group-item-text mt-4 mb-4">
                        <p>@review.Text</p>
                    </div>
                </div>

                <div class="col-md-1 mt-4 mb-4">
                    @if (Model.ReviewRatedList.FirstOrDefault(x => x.Contains(@review.Id.ToString())) == null)
                    {
                        <button type="button" class="btn btn-success btn-lg btn-block" onclick="rating('up','@review.Id.ToString()')"><i class="fa fa-thumbs-up"></i></button>
                        <button type="button" class="btn btn-danger btn-lg btn-block" onclick="rating('down','@review.Id.ToString()')"><i class="fa fa-thumbs-down"></i></button>
                    }
                    else
                    {
                        <button type="button" class="disabled btn btn-success btn-lg btn-block" onclick="rating('up','@review.Id.ToString()')"><i class="fa fa-thumbs-up"></i></button>
                        <button type="button" class="disabled btn btn-danger btn-lg btn-block" onclick="rating('down','@review.Id.ToString()')"><i class="fa fa-thumbs-down"></i></button>
                    }

                </div>
                <div class="col-md-3 text-left">

                    @for (int i = 0; i < Convert.ToInt32(@review.Rating); i++)
                    {
                        <span class="float-left fa fa-star checked"></span>
                        stars++;
                    }

                    @for (int i = stars; i < 5; i++)
                    {
                        <i class="float-left fa fa-star-o unChecked" aria-hidden="true"></i>
                    }
                </div>
            </div>


        </div>

    }


}

<script>

    function rating(value, id) {
        var url = '/MovieReviewResult/ReviewRating?id=' + id + '&rating=' + value;
        $.get(url,
            function (data, status) {
                $("#partialViewReviewResult").empty().append(data);
                //alert("Data: " + data + "\nStatus: " + status);
            });
    }
</script>

