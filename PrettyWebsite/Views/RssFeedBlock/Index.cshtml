@model PrettyWebsite.Models.ViewModels.Blocks.RssFeedBlockViewModel

@{
    ViewBag.Title = "Index";
}


<div class="card mb-5 mt-1 ml-1 mr-1" style="background-color:black;">

    <h2 class="ml-5 mt-5 text-warning">@Model.CurrentBlock.Title</h2>

    @foreach (var item in Model.RssFeed)
    {
        <div class="card mt-5 ml-5 mr-5">


            <div class="card-header text-warning" style="background-color:black;">
                <h2>@item.Title</h2>
            </div>
            <div class="card-body text-warning" style="background-color:black;">
                @item.Body
            </div>
            <div class="card-footer text-warning" style="background-color:black;">
                <a href="@item.Url">@item.Url</a>
                <p>@item.PublicationDate</p>
                <div class="text-warning" style="background-color:black;">
                    <p>@item.Category</p>
                </div>
            </div>
        </div>
    }
</div>

